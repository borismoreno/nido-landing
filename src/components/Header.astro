---
const links = [
    { name: "Inicio", href: "/" },
    { name: "Blog", href: "/blog" },
    { name: "Contacto", href: "/contacto" },
];
---

<header
    class="w-full bg-white/80 backdrop-blur-sm border-b border-gray-100 sticky top-0 z-50"
>
    <div class="max-w-6xl mx-auto flex items-center justify-between px-6 py-4">
        <a href="/" class="flex items-center gap-2">
            <img src="/favicon.svg" alt="MiNido logo" class="w-8 h-8" />
            <span class="text-xl font-bold text-coral tracking-tight"
                >MiNido</span
            >
        </a>

        <nav class="hidden sm:flex items-center gap-6">
            {
                links.map((link) => (
                    <a
                        href={link.href}
                        class="text-gray-700 hover:text-coral transition font-medium"
                    >
                        {link.name}
                    </a>
                ))
            }
        </nav>

        <a
            href="https://app.minidoapp.com"
            class="hidden sm:inline-block bg-coral text-white px-4 py-2 rounded-xl font-medium hover:bg-[#d56b63] transition"
        >
            Iniciar sesión
        </a>

        <!-- Menú móvil -->
        <details class="sm:hidden relative">
            <summary class="list-none cursor-pointer text-coral text-2xl"
                >☰</summary
            >
            <div
                class="absolute right-0 mt-3 bg-white border rounded-xl shadow-lg p-4 w-40 flex flex-col gap-2"
            >
                {
                    links.map((link) => (
                        <a
                            href={link.href}
                            class="text-gray-700 hover:text-coral transition font-medium"
                        >
                            {link.name}
                        </a>
                    ))
                }
                <a
                    href="https://app.minidoapp.com"
                    class="mt-2 bg-coral text-white px-3 py-2 rounded-lg text-center"
                >
                    Iniciar sesión
                </a>
            </div>
        </details>
    </div>
</header>
