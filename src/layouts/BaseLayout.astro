---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

const { title, description } = Astro.props;
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title || "MiNido â€” Organiza tus gastos en pareja"}</title>
        <meta
            name="description"
            content={description ||
                "La app que ayuda a las parejas a manejar sus gastos juntos de forma simple y emocional."}
        />
        <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    </head>
    <body class="flex flex-col min-h-screen">
        <Header slot="header" />
        <slot name="header" />
        <main class="flex-1"><slot /></main>
        <slot name="footer" />
        <Footer slot="footer" />
    </body>
</html>
